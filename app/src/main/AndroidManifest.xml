<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sandhu.manny.mylibrary">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MyLibraryActivity"
            android:label="@string/title_activity_my_library"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sandhu.manny.mylibrary.MainActivity" />
        </activity>
        <activity
            android:name=".AddBookActivity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sandhu.manny.mylibrary.MainActivity" />
        </activity>
        <activity
            android:name=".AddBookFromShelfActivity"
            android:parentActivityName=".ShelfActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sandhu.manny.mylibrary.MainActivity" />
        </activity>
        <activity android:name=".MyShelvesActivity" />
        <activity
            android:name=".ShelfActivity"
            android:label="@string/title_activity_shelf"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>